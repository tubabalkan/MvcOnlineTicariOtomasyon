@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-striped">
    <tr>
        <th>Cari Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylaar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CarilerID</td>
            <td>@x.CarilerAd</td>
            <td>@x.CarilerSoyad</td>
            <td>@x.CarilerSehir</td>
            <td>@x.CarilerMail</td>
            <td><a href="/Cariler/CariSil/@x.CarilerID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Cariler/CariGetir/@x.CarilerID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Cariler/MusteriSatis//@x.CarilerID" class="btn btn-default" style="background-color:lightcoral">Satış Geçmişi</a></td>
        </tr>
    }



</table>
<a href="/Cariler/YeniCari/" class="btn btn-info">Yeni Cari Ekle</a>
