@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Detaylar</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@x.Urun.UrunAd</td>
            <td>@x.Cariler.CarilerAd @x.Cariler.CarilerSoyad</td>
            <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</td>
            <td>@x.Adet</td>
            <td>@x.Fiyat</td>
            <td>@x.ToplamTutar</td>
            <td>@(((DateTime)x.Tarih).ToString("dd.MMM.yyyy"))</td>
            <td><a href="/Satis/SatisGetir/@x.SatisHareketId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@x.SatisHareketId" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a></td>
        </tr>

    }
</table>
<a href="/Satis/YeniSatis/" class="btn btn-info">Yeni Satış Bilgisi Ekle</a>

