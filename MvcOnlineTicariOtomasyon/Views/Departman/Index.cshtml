@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Departman>
    
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Id</th>
        <th>Departman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@x.DepartmanAd</td>
            <td><a href="/Departman/DepartmanSil/@x.DepartmanId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Departman/DepartmanGetir/@x.DepartmanId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanDetay/@x.DepartmanId" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a></td>

        </tr>
    }

</table>
<a href="/Departman/DepartmanEkle/" class="btn btn-info">Yeni Departman</a>


